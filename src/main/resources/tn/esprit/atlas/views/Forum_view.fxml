<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="496.0" prefWidth="875.0" spacing="20" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Title Text -->
        <Text fill="WHITE" text="Welcome to Our Forum">
            <font>
                <Font name="Arial" size="36.0" />
            </font>
        </Text>

        <!-- Description Text -->
        <Text fill="WHITE" text="Feel free to explore and discuss anything here!">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Text>

        <!-- Button -->
        <Button mnemonicParsing="false" prefHeight="49.0" prefWidth="368.0" style="-fx-background-radius: 10; -fx-background-color: orange;" text="Join the Discussion" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </children>
</VBox>
